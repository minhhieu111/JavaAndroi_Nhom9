<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".User.MoviePlayerActivity"
            android:exported="false" />
        <service android:name=".Service.FloatingWidgetService"/>
        <activity
            android:name=".User.MovieDetailsActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".User.HomeActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Admin.UploadThumbnailActivity"
            android:exported="false" />
        <activity
            android:name=".Admin.UploadVideoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>